<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_common_nav_close"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fast_icon_phone"
            android:id="@+id/fast_icon_phone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textSize="25dp"
            android:layout_toRightOf="@id/fast_icon_phone"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_area_code"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0"
            android:layout_toRightOf="@id/tv_area_code"
            android:layout_marginLeft="10dp"
            android:id="@+id/view"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/view"
            android:layout_marginLeft="10dp"
            android:id="@+id/edt_num"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_del_all_highlight"
            android:layout_toRightOf="@+id/edt_num"
            android:layout_marginLeft="25dp"
            android:id="@+id/im_del_all"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E0E0E0"
            android:layout_alignLeft="@id/fast_icon_phone"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@id/im_del_all"
            />
    </RelativeLayout>

</LinearLayout>