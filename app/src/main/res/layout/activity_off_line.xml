<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_common_nav_close"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fast_icon_phone"
            android:id="@+id/fast_icon_phone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textSize="25dp"
            android:layout_toRightOf="@id/fast_icon_phone"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_area_code"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0"
            android:layout_toRightOf="@id/tv_area_code"
            android:layout_marginLeft="10dp"
            android:id="@+id/view"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/view"
            android:layout_marginLeft="10dp"
            android:id="@+id/edt_num"
            android:hint="手机号"

            android:background="@null"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_del_all_highlight"
            android:layout_toRightOf="@+id/edt_num"
            android:layout_marginLeft="25dp"
            android:id="@+id/im_del_all"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E0E0E0"
            android:layout_alignLeft="@id/fast_icon_phone"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@id/im_del_all"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        >
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fast_icon_message"
            android:id="@+id/iv_message"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="手机验证码"
            android:background="@null"
            android:layout_toRightOf="@id/iv_message"
            android:layout_marginLeft="10dp"
            android:id="@+id/edt_verify"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edt_verify"
            android:layout_marginLeft="30dp"
            android:text="获取验证码"
            android:textColor="#2B2B2B"
            android:id="@+id/tv_verify"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/iv_message"
            android:layout_alignRight="@+id/tv_verify"

            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您也可以尝试"
        android:textColor="#515658"
        android:layout_marginLeft="180dp"
        android:id="@+id/tv_try"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接听语音验证码"
        android:layout_toRightOf="@+id/tv_try"
        android:textColor="#2B2B2B"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="快速登录"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/bt_follow"
            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="40dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_login_wechat"
        android:layout_marginLeft="80dp"
        android:id="@+id/im_wechat"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_login_kr"
        android:layout_toRightOf="@id/im_wechat"
        android:layout_marginLeft="80dp"
        android:id="@+id/im_36kr"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信登录"
        android:layout_below="@id/im_wechat"
        android:layout_alignRight="@id/im_wechat"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号密码登录"
        android:layout_below="@id/im_36kr"
        android:layout_alignRight="@id/im_36kr"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录代表您已阅读并同意"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_agree"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36氪网络使用协议"
        android:textColor="#2b2b2b"
        android:layout_toRightOf="@+id/tv_agree"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_36"
        />
    <TextView
        android:id="@+id/tv_he"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="和"
        android:layout_toRightOf="@+id/tv_36"
        android:layout_alignParentBottom="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐私条款"
        android:textColor="#2b2b2b"
        android:layout_toRightOf="@+id/tv_he"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>


</LinearLayout>